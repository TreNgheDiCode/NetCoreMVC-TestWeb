@model IEnumerable<Book>;

@{
    ViewData["Title"] = "Home Page";
    var cultureInfo = new System.Globalization.CultureInfo("vi-VN");
}

<style>
    #card-body {
        background-color: lightgrey;
        border: 1px solid grey;
    }
</style>

<div class="container-fluid">
    <h1 class="text-center">
        Book Page
    </h1>
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-4">
                <div class="card shadow-sm">
                    <img class="bd-placeholder-img card-img-top" src="@item.image" width="100%" height="225" alt="Card image cap">

                    <div class="card-body">
                        <h4>@item.name</h4>
                        <p class="text-danger">@string.Format(cultureInfo, "{0:C3}", item.price)</p>
                    </div>
                    <div>
                        <div id="card-body" class="d-flex justify-content-between align-items-center p-2">
                            <div class="btn-group">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a asp-area="" asp-controller="Book" asp-action="Detail" asp-route-name="@item.name" type="button" class="btn btn-sm btn-primary">Details</a>
                                } else
                                {
                                    <div class="flex-column align-items-center">Đăng nhập để xem chi tiết sản phẩm</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
